# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# TypeScript and JavaScript specific settings
[*.{ts,tsx,js,jsx,mjs,cjs}]
quote_type = single
curly_bracket_next_line = false
spaces_around_brackets = true
indent_brace_style = 1tbs

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# JSON files
[*.json]
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2

# HTML, CSS, SCSS files
[*.{html,css,scss,sass}]
indent_size = 2

# Configuration files
[{package.json,.travis.yml,.eslintrc,.prettierrc}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
shell_variant = bash
switch_case_indent = true

# Windows shell scripts
[*.{cmd,bat}]
end_of_line = crlf
